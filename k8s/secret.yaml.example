apiVersion: v1
kind: Secret
metadata:
  name: gcp-visualizer-credentials
  namespace: gcp-visualizer
type: Opaque
stringData:
  # Base64 encoded service account key JSON
  # To create: cat service-account-key.json | base64 -w 0
  credentials.json: |
    <BASE64_ENCODED_SERVICE_ACCOUNT_KEY_JSON>

---
# Alternative: Use Workload Identity (recommended for GKE)
# If using Workload Identity, you don't need the credentials secret above
# Instead, annotate the service account:
apiVersion: v1
kind: ServiceAccount
metadata:
  name: gcp-visualizer-backend
  namespace: gcp-visualizer
  annotations:
    iam.gke.io/gcp-service-account: YOUR_GCP_SERVICE_ACCOUNT@YOUR_PROJECT_ID.iam.gserviceaccount.com

